generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Locality {
  id                  String   @id
  locality            String   @unique
  role                roleType
  outstanding_balance Decimal  @default(0.00) @db.Decimal(10, 2)
  password            String
  createdAt           DateTime
  updatedAt           DateTime
}

enum roleType {
  USER
  ADMIN
}
