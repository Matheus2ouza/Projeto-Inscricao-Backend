# Configurações do Banco de Dados
# URL de conexão com o PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Configurações JWT
# Chave secreta para autenticação JWT (deve ser uma string longa e aleatória)
JWT_AUTH_SECRECT="your-super-secret-jwt-auth-key-here-make-it-long-and-random"
# Chave secreta para refresh token JWT (deve ser uma string longa e aleatória)
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-key-here-make-it-long-and-random"

# Configurações da Aplicação
# Ambiente da aplicação (development, production, test)
NODE_ENV="production"
# Porta onde a aplicação irá rodar
PORT=3000

# Configurações de Log
# Nível de log (error, warn, info, debug)
LOG_LEVEL="info"

# Configurações de Segurança
# Chave para criptografia adicional (opcional)
ENCRYPTION_KEY="your-encryption-key-here"
